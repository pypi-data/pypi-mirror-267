# Include the license file and markdown files
include LICENSE
include README.md
include README_ES.md
include CHANGELOG.md

# Include the requirements file
include requirements.txt

# Include all the python source files
recursive-include panama_ruc_dv_calculator *.py

# Exclude specific directories and their contents
prune dgi
prune examples
prune tests
prune build
prune dist
prune *.egg-info

# Exclude compiled Python files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
