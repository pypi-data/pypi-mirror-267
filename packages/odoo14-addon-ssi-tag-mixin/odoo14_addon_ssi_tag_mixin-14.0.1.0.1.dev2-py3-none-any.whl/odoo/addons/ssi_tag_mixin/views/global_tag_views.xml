<odoo>
<record id="global_tag_view_tree" model="ir.ui.view">
    <field name="name">global_tag - Tree</field>
    <field name="model">global_tag</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="category_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="global_tag_view_search" model="ir.ui.view">
    <field name="name">global_tag - Search</field>
    <field name="model">global_tag</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="category_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="global_tag_view_form" model="ir.ui.view">
    <field name="name">global_tag - Form</field>
    <field name="model">global_tag</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='active']" position="after">
                <field name="category_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="global_tag_action" model="ir.actions.act_window">
    <field name="name">Global Tags</field>
    <field name="res_model">global_tag</field>
    <field name="view_mode">tree,form</field>
</record>


<menuitem
        id="global_tag_menu"
        name="Tags"
        parent="menu_global_tag_header"
        groups="base.group_system"
        action="global_tag_action"
        sequence="120"
    />
</odoo>
